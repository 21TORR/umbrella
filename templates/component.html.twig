{% extends "@Umbrella/base.html.twig" %}

{%- block content -%}
	<iframe class="site-preview shadow-sm" src="{{ path("umbrella.preview", {category: component.category.key, key: component.key}) }}"></iframe>
	{% if docs %}
		<div class="site-docs content">
			<h1 class="h1">{{ component.label }}</h1>
			{{- docs | raw -}}
		</div>
	{% endif %}
{%- endblock -%}
