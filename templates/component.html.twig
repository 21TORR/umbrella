<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport"
			  content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<title>☂️ {{ component.label }} • {{ category.label }} • Umbrella</title>
		<style type="text/css">
			* {
				margin: 0;
				padding: 0;
			}

			html, body {
				height: 100%;
				overflow: hidden;
			}
			.site-layout {
				display: flex;
				height: 100%;
				width: 100%;
			}

			.site-navigation {
				flex-grow: 0;
				flex-shrink: 0;
				min-width: 0;
				width: 200px;
			}

			.site-content {
				flex-grow: 1;
				flex-shrink: 0;
				min-width: 0;
			}

			.site-preview {
				width: 100%;
				height: 100%;
			}
		</style>
	</head>
	<body class="umbrella">
		<div class="site-layout">
			<div class="site-content">
				<iframe class="site-preview" src="{{ path("umbrella.preview", {category: category.key, key: component.key}) }}"></iframe>
			</div>
			<div class="site-navigation"></div>
		</div>
	</body>
</html>
